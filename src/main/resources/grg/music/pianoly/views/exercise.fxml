<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<AnchorPane fx:id="root" fx:controller="grg.music.pianoly.gui.views.ExerciseView"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">

    <TabPane fx:id="tabPane" tabMinHeight="30" tabMinWidth="20"
             AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <Tab closable="false" text="+">
            <VBox alignment="TOP_CENTER" spacing="20">
                <HBox alignment="CENTER" spacing="20">
                    <Label text="Mode:"/>
                    <ComboBox fx:id="mode" prefHeight="30" prefWidth="100" onAction="#onModeChanged"/>
                </HBox>
                <HBox fx:id="specsBox" alignment="CENTER" spacing="20"/>
                <Label fx:id="preview" text="To Play: "/>
                <Button fx:id="save" prefHeight="30" prefWidth="100" disable="true" text="Save" onAction="#onSave"/>
            </VBox>
        </Tab>
    </TabPane>

    <VBox alignment="CENTER" spacing="20" AnchorPane.bottomAnchor="50" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <Label text="Students:">
            <font>
                <Font size="28"/>
            </font>
        </Label>
        <fx:include source="students.fxml"/>
    </VBox>

</AnchorPane>
