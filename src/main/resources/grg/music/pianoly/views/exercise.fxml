<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="root" fx:controller="grg.music.pianoly.gui.views.ExerciseView"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">

    <TabPane fx:id="tabPane" tabMinHeight="30" tabMinWidth="20"
             AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor=".0" AnchorPane.topAnchor="0">
        <Tab closable="false" text="+">
            <VBox alignment="TOP_CENTER" spacing="20">
                <HBox alignment="CENTER" spacing="20">
                    <Label text="Name:"/>
                    <TextField fx:id="name" maxWidth="100" prefHeight="30"/>
                </HBox>
                <HBox alignment="CENTER" spacing="20">
                    <Label text="Mode:"/>
                    <ComboBox fx:id="mode" prefHeight="30" prefWidth="100"/>
                </HBox>
                <HBox alignment="CENTER" spacing="20">
                    <Label text="Specification:"/>
                    <ComboBox fx:id="specs" prefHeight="30" prefWidth="100"/>
                </HBox>
                <Button prefHeight="30" prefWidth="100" text="Save"/>
            </VBox>
        </Tab>
    </TabPane>

</AnchorPane>
